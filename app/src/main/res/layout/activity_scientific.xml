<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/Button5"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_alignBaseline="@+id/Button4"
        android:layout_alignBottom="@+id/Button4"
        android:layout_alignLeft="@+id/Button2"
        android:text="5" />

    <Button
        android:id="@+id/Button6"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_alignBaseline="@+id/Button5"
        android:layout_alignBottom="@+id/Button5"
        android:layout_alignLeft="@+id/Button3"
        android:text="6" />

    <Button
        android:id="@+id/Button8"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_alignBaseline="@+id/Button7"
        android:layout_alignBottom="@+id/Button7"
        android:layout_alignLeft="@+id/Button5"
        android:text="8" />

    <Button
        android:id="@+id/Button9"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_alignBaseline="@+id/Button8"
        android:layout_alignBottom="@+id/Button8"
        android:layout_alignLeft="@+id/Button6"
        android:text="9" />

    <Button
        android:id="@+id/Button3"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_above="@+id/Button4"
        android:layout_toRightOf="@+id/Button2"
        android:text="3" />

    <Button
        android:id="@+id/Button2"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:text="2" />

    <Button
        android:id="@+id/button_dota"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_alignBaseline="@+id/button0"
        android:layout_alignBottom="@+id/button0"
        android:layout_alignLeft="@+id/Button9"
        android:text="." />

    <Button
        android:id="@+id/buttonadd"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_alignBaseline="@+id/Button3"
        android:layout_alignBottom="@+id/Button3"
        android:layout_alignRight="@+id/res"
        android:text="+" />

    <Button
        android:id="@+id/buttonmi"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_alignBottom="@+id/Button6"
        android:layout_alignLeft="@+id/buttonadd"
        android:text="-" />

    <Button
        android:id="@+id/buttonml"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_alignBottom="@+id/Button9"
        android:layout_alignParentRight="true"
        android:text="*" />

    <Button
        android:id="@+id/buttondv"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_alignBaseline="@+id/button_dota"
        android:layout_alignBottom="@+id/button_dota"
        android:layout_alignLeft="@+id/buttonml"
        android:text="/" />

    <Button
        android:id="@+id/buttonent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="ENTER" />

    <Button
        android:id="@+id/Button4"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_below="@+id/button1"
        android:layout_toLeftOf="@+id/Button2"
        android:text="4" />

    <Button
        android:id="@+id/Button7"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_below="@+id/Button5"
        android:layout_toLeftOf="@+id/Button5"
        android:text="7" />

    <Button
        android:id="@+id/button0"
        android:layout_width="140dp"
        android:layout_height="47dp"
        android:layout_alignLeft="@+id/Button7"
        android:layout_alignRight="@+id/Button8"
        android:layout_below="@+id/Button8"
        android:text="0" />

    <Button
        android:id="@+id/button1"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_alignLeft="@+id/res"
        android:layout_centerVertical="true"
        android:text="1" />

    <Button
        android:id="@+id/buttonce"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_above="@+id/Button2"
        android:layout_alignLeft="@+id/button1"
        android:text="CE" />

    <Button
        android:id="@+id/buttonper"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_above="@+id/Button3"
        android:layout_alignLeft="@+id/Button2"
        android:text="%" />

    <Button
        android:id="@+id/buttonpow"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_alignBaseline="@+id/buttonper"
        android:layout_alignBottom="@+id/buttonper"
        android:layout_toRightOf="@+id/Button2"
        android:text="^" />

    <Button
        android:id="@+id/buttonrt"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_above="@+id/buttonadd"
        android:layout_alignRight="@+id/buttonadd"
        android:text="âˆš" />

    <EditText
        android:id="@+id/res"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_above="@+id/buttonce"
        android:layout_alignRight="@+id/buttonml"
        android:layout_marginBottom="58dp"
        android:ems="10"
        android:gravity="right"
        android:freezesText="true" 
         />

    <ToggleButton
        android:id="@+id/TGButton"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:layout_above="@+id/res"
        android:layout_alignRight="@+id/res"
        android:onClick="tgb"
        android:text="ToggleButton"
        android:textOff="Scientific"
        android:textOn="Basic" />

    <Button
        android:id="@+id/btn_del"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_above="@+id/buttonce"
        android:layout_alignLeft="@+id/buttonce"
        android:text="DEL" />

</RelativeLayout>
